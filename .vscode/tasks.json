// CMake configuration
// From: https://stackoverflow.com/questions/49584507/how-to-run-cmake-in-visual-studio-code-using-tasks

{
    "label": "cmake",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "command": "cmake",
    // "args": [
    //     "-G",
    //     "'MinGW Makefiles'",
    //     "."
        // "./.."
    // ],
    "args": [
        "--build",
        "."
    ],
    "group": {
        "kind": "build",
        "isDefault": true
    },
},

